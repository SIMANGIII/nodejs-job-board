<% jobs.forEach(job => { %>
<div class="card mb-3">
    <div class="card-body d-flex align-items-center">
        <i class="fas fa-building fa-2x me-3 text-muted"></i>
        <div>
            <h5 class="mb-0"><a href="/<%= job._id %>" class="text-decoration-none"><%= job.title %></a></h5>
            <p class="text-muted mb-0"><%= job.company %></p>
        </div>
        <div class="ms-auto text-end">
            <p class="mb-0"><%= job.location %></p>
            <p class="text-success fw-bold mb-0"><%= job.jobTypes.join(', ') %></p>
            <p class="text-muted mb-0">Posted: <%= job.createdAt ? job.createdAt.toLocaleString() : 'N/A' %></p>
            <!-- <p class="text-muted mb-0">Posted <%= job.createdAt ? job.createdAt.toLocaleDateString() : 'N/A' %></p> -->
            <p class="text-muted mb-0">Closes: <%= job.closingDate ? job.closingDate.toLocaleDateString() : 'N/A' %></p>
            <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
            <div class="mt-2">
                <a href="/<%= job._id %>/edit" class="btn btn-secondary btn-sm">Edit</a>
                <form action="/<%= job._id %>/delete" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
            <% } %>
        </div>
    </div>
</div>
<% }) %>